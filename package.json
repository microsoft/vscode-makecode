{
  "name": "pxt-vscode-web",
  "publisher": "ms-edu",
  "displayName": "Microsoft MakeCode Arcade",
  "description": "Learn Code and Make Games. The MakeCode Arcade extension for VS Code allows students to take their game development to the next level. Using JavaScript or Python, create retro arcade style video games using your own art and music assets.",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Education"
  ],
  "keywords": [
    "makecode", "education", "arcade", "learn", "student"
  ],
  "icon": "media/logo-128x128.png",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/pxt-vscode-web"
  },
  "activationEvents": [
    "onCommand:makecode.create",
    "workspaceContains:./pxt.json"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "makecode.build",
        "title": "MakeCode: Build project"
      },
      {
        "command": "makecode.simulate",
        "title": "MakeCode: Simulate project"
      },
      {
        "command": "makecode.create",
        "title": "MakeCode: Create an empty project"
      },
      {
        "command": "makecode.choosehw",
        "title": "MakeCode: Choose hardware board"
      },
      {
        "command": "makecode.install",
        "title": "MakeCode: Download project dependencies"
      },
      {
        "command": "makecode.clean",
        "title": "MakeCode: Clean built folders"
      },
      {
        "command": "makecode.importUrl",
        "title": "MakeCode: Import project from URL"
      },
      {
        "command": "makecode.shareProject",
        "title": "MakeCode: Share project"
      },
      {
        "command": "makecode.addDependency",
        "title": "MakeCode: Add extension to project"
      },
      {
        "command": "makecode.removeDependency",
        "title": "MakeCode: Remove extension from project"
      },
      {
        "command": "makecode.createImage",
        "title": "MakeCode: Create a new image asset",
        "icon": {
          "light": "media/light/new-file.svg",
          "dark": "media/dark/new-file.svg"
        }
      },
      {
        "command": "makecode.createTile",
        "title": "MakeCode: Create a new tile asset",
        "icon": {
          "light": "media/light/new-file.svg",
          "dark": "media/dark/new-file.svg"
        }
      },
      {
        "command": "makecode.createTilemap",
        "title": "MakeCode: Create a new tilemap asset",
        "icon": {
          "light": "media/light/new-file.svg",
          "dark": "media/dark/new-file.svg"
        }
      },
      {
        "command": "makecode.createAnimation",
        "title": "MakeCode: Create a new animation asset",
        "icon": {
          "light": "media/light/new-file.svg",
          "dark": "media/dark/new-file.svg"
        }
      },
      {
        "command": "makecode.createSong",
        "title": "MakeCode: Create a new song asset",
        "icon": {
          "light": "media/light/new-file.svg",
          "dark": "media/dark/new-file.svg"
        }
      },
      {
        "command": "makecode.deleteAsset",
        "title": "MakeCode: Delete an asset",
        "icon": {
          "light": "media/light/trash.svg",
          "dark": "media/dark/trash.svg"
        }
      },
      {
        "command": "makecode.duplicateAsset",
        "title": "MakeCode: Duplicate an asset",
        "icon": {
          "light": "media/light/files.svg",
          "dark": "media/dark/files.svg"
        }
      },
      {
        "command": "makecode.refreshAssets",
        "title": "MakeCode: Refresh asset explorer",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "asset-explorer",
          "title": "Asset Explorer",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "asset-explorer": [
        {
          "id": "makecodeActions",
          "name": "Actions",
          "icon": "media/logo.svg",
          "contextualTitle": "Actions"
        },
        {
          "id": "imageExplorer",
          "name": "Images",
          "icon": "media/logo.svg",
          "contextualTitle": "Images"
        },
        {
          "id": "animationExplorer",
          "name": "Animations",
          "icon": "media/logo.svg",
          "contextualTitle": "Animations"
        },
        {
          "id": "tileExplorer",
          "name": "Tiles",
          "icon": "media/logo.svg",
          "contextualTitle": "Tiles"
        },
        {
          "id": "tilemapExplorer",
          "name": "Tilemaps",
          "icon": "media/logo.svg",
          "contextualTitle": "Tilemaps"
        },
        {
          "id": "songExplorer",
          "name": "Songs",
          "icon": "media/logo.svg",
          "contextualTitle": "Songs"
        }
      ]
    },
    "breakpoints": [
      {
        "language": "typescript"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == typescript",
          "command": "makecode.simulate",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "makecode.createImage",
          "when": "view == imageExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.createTile",
          "when": "view == tileExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.createTilemap",
          "when": "view == tilemapExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.createAnimation",
          "when": "view == animationExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.createSong",
          "when": "view == songExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.refreshAssets",
          "when": "view == imageExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.refreshAssets",
          "when": "view == tileExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.refreshAssets",
          "when": "view == tilemapExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.refreshAssets",
          "when": "view == animationExplorer",
          "group": "navigation"
        },
        {
          "command": "makecode.refreshAssets",
          "when": "view == songExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "makecode.duplicateAsset",
          "when": "view == imageExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.duplicateAsset",
          "when": "view == tileExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.duplicateAsset",
          "when": "view == tilemapExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.duplicateAsset",
          "when": "view == animationExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.duplicateAsset",
          "when": "view == songExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.deleteAsset",
          "when": "view == imageExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.deleteAsset",
          "when": "view == tilemapExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.deleteAsset",
          "when": "view == animationExplorer",
          "group": "inline"
        },
        {
          "command": "makecode.deleteAsset",
          "when": "view == songExplorer",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "yarn run compile-web",
    "vscode:prepublish": "yarn run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/vscode": "^1.72.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-web": "^0.0.30",
    "assert": "^2.0.0",
    "eslint": "^8.24.0",
    "mocha": "^10.0.0",
    "process": "^0.11.10",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "path-browserify": "^1.0.1",
    "makecode-core": "^1.0.2",
    "makecode-browser": "^1.0.0"
  }
}
